@page "{id:guid}"
@using TennisReservation.Presentation.Pages.Users
@model TennisReservation.Presentation.Pages.Users.EditModel
@{
    ViewData["Title"] = "Редактировать пользователя";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Редактировать пользователя
                    </h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form method="post">
                        <input type="hidden" asp-for="ViewModel.Id" />
                        <div class="mb-3">
                            <label asp-for="ViewModel.FirstName" class="form-label">
                                @Html.DisplayNameFor(model => model.ViewModel.FirstName)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ViewModel.FirstName" class="form-control" />
                            <span asp-validation-for="ViewModel.FirstName" class="text-danger"></span>
                        </div>

                     
                        <div class="mb-3">
                            <label asp-for="ViewModel.LastName" class="form-label">
                                @Html.DisplayNameFor(model => model.ViewModel.LastName)
                                <span class="text-danger">*</span></label>
                            <input asp-for="ViewModel.LastName" class="form-control" />
                            <span asp-validation-for="ViewModel.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Email" class="form-label">
                                @Html.DisplayNameFor(model => model.ViewModel.Email)
                                <span class="text-danger">*</span></label>
                            <input asp-for="ViewModel.Email" class="form-control" type="email" />
                            <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                        </div>

                    
                        <div class="mb-3">
                            <label asp-for="ViewModel.PhoneNumber" class="form-label">
                                @Html.DisplayNameFor(model => model.ViewModel.PhoneNumber)
                                <span class="text-danger">*</span></label>
                            <input asp-for="ViewModel.PhoneNumber" class="form-control" />
                            <span asp-validation-for="ViewModel.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Назад к списку
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
