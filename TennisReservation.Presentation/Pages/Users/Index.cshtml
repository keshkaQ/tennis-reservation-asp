@page
@using TennisReservation.Domain.Models
@using TennisReservation.Presentation.Pages.Users
@model TennisReservation.API_RP.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-user-circle me-2"></i>
            Клиенты
        </h1>
        <div>
            <a asp-page="/Index" class="btn btn-outline-secondary me-2">
                <i class="fas fa-home me-1"></i> На главную
            </a>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Добавить клиента
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5>Список клиентов</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Дата регистрации</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal-@user.UserId">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>

                        <div class="modal fade"
                             id="deleteModal-@user.UserId"
                             data-bs-backdrop="static"
                             data-bs-keyboard="false"
                             tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Подтверждение удаления</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Вы действительно хотите удалить клиента?</p>
                                        <p class="fw-bold">@user.FirstName @user.LastName</p>
                                        <p class="text-muted">Email: @user.Email</p>
                                        <p class="text-danger">Это действие нельзя отменить!</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            Отмена
                                        </button>

                                        <form method="post"  asp-page="./Index"  asp-page-handler="Delete" asp-route-id="@user.UserId">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash me-1"></i> Удалить
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>

            @if (!Model.Users.Any())
            {
                <div class="text-center py-5">
                    <h5 class="text-muted">Клиенты не найдены</h5>
                    <a asp-page="./Create" class="btn btn-primary mt-2">
                        Добавить первого клиента
                    </a>
                </div>
            }
        </div>
        <div class="card-footer text-muted">
            Всего клиентов: <strong>@Model.Users.Count()</strong>
        </div>
    </div>
</div>