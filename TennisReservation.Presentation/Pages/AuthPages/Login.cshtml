@page
@using TennisReservation.Presentation.Pages.AuthPages
@model TennisReservation.Presentation.Pages.AuthPages.LoginModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-sign-in-alt me-2"></i>Вход в систему
                    </h4>
                </div>
                
                <div class="card-body p-4">
                  @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                  {
                      <div class="alert alert-danger">
                          <i class="fas fa-exclamation-circle me-2"></i>
                          Неверный email или пароль
                      </div>
                  }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                      
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Input.Email" type="email" class="form-control" 
                                   placeholder="Введите ваш email" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                       
                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Пароль
                            </label>
                            <input asp-for="Input.Password" type="password" class="form-control" 
                                   placeholder="Введите пароль" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Войти
                        </button>

                        <div class="text-center">
                            <p class="mb-0">
                                Нет аккаунта? 
                                <a asp-page="/AuthPages/Register" class="text-primary text-decoration-none">
                                    Зарегистрироваться
                                </a>
                            </p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
