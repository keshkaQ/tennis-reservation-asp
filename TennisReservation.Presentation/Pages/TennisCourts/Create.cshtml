@page
@using TennisReservation.Presentation.Pages.TennisCourts
@model TennisReservation.Presentation.TennisCourts.CreateModel
@{
	ViewData["Title"] = "Добавить корт";
}

<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-sm">

				<div class="card-header bg-success text-white">
					<h4> Добавление новой площадки</h4>
				</div>
				<div class="card-body">
					<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
					<form method="post">

						<div class="mb-3">
							<label class="form-label" asp-for="Command.Name">
								@Html.DisplayNameFor(model => model.Command.Name)
								<span class="text-danger">*</span>
							</label>
							<input asp-for="Command.Name" class="form-control" />
							<span asp-validation-for="Command.Name" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label class="form-label" asp-for="Command.HourlyRate">
								@Html.DisplayNameFor(model => model.Command.HourlyRate)
								<span class="text-danger">*</span>
							</label>
							<input asp-for="Command.HourlyRate" class="form-control" type="number" />
							<span asp-validation-for="Command.HourlyRate" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label class="form-label" asp-for="Command.Description">
								@Html.DisplayNameFor(model => model.Command.Description)
								<span class="text-danger">*</span>
							</label>
							<textarea asp-for="Command.Description" class="form-control" type="number" rows="5"></textarea>
							<span asp-validation-for="Command.Description" class="text-danger"></span>
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a asp-page="./Index" class="btn btn-outline-secondary"> 
								<i class="fas fa-arrow-left me-1"></i>Назад к списку кортов
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-save me-1"></i>Сохранить корт
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
