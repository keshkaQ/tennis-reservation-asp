@page
@model IndexModel
@{
    ViewData["Title"] = "Теннисный клуб - Главная";
}

<div class="hero-section" style="background-image: url('/images/main.jpg');">
    <div class="hero-content">
        <h1>Теннисный клуб</h1>
        <p>Профессиональные корты в центре города</p>
        <a href="/Reservations/Create" class="btn-book">
            <i class="fas fa-calendar-check me-2"></i>Забронировать корт
        </a>
    </div>
</div>

<style>
    .hero-section {
        height: 600px;
        background-size: cover;
        background-position: center;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        margin-bottom: 50px;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        padding: 20px;
    }

    .hero-content h1 {
        font-size: 4rem;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .hero-content p {
        font-size: 1.5rem;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .btn-book {
        display: inline-block;
        padding: 15px 40px;
        font-size: 1.3rem;
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        border-radius: 50px;
        text-decoration: none;
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .btn-book:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        color: white;
    }

</style>