@page "{code?}"
@model ErrorModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        @if (Model.StatusCode.HasValue)
                        {
                            <span>Ошибка @Model.StatusCode</span>
                        }
                        else
                        {
                            <span>⚠️ Произошла ошибка</span>
                        }
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-danger">
                        @Model.ErrorMessage
                    </h4>

                    @if (!string.IsNullOrEmpty(Model.ErrorDescription))
                    {
                        <p class="card-text">@Model.ErrorDescription</p>
                    }

                    <hr />

                    <div class="mt-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Вернуться на главную
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>