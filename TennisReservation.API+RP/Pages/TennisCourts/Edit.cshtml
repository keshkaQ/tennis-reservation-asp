@page "{id:guid}"
@model TennisReservation.API_RP.Pages.TennisCourts.EditModel
@{
	ViewData["Title"] = "Редактировать корт";
}

<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col md-8">
			<div class="card shadow-sm">
				<div class="card-header bg-success text-white">
					<h4 class="mb-0">
						<i class="fas fa-edit me-2"></i> Редактировать корт
					</h4>
				</div>
				<div class="card-body">
					<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
					</div>

					<form method="post">
						<div class="mb-3">
							<label asp-for="Command.Name" class="form-label">
								@Html.DisplayNameFor(model => model.Command.Name)
								<span class="text-danger">*</span>
							</label>
							<input asp-for="Command.Name" class="form-control" />
							<span asp-validation-for="Command.Name" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Command.HourlyRate" class="form-label">
								@Html.DisplayNameFor(model => model.Command.HourlyRate)
								<span class="text-danger">*</span>
							</label>
							<input type="number" min="1" asp-for="Command.HourlyRate" class="form-control" />
							<span asp-validation-for="Command.HourlyRate" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="Command.Description" class="form-label">
								@Html.DisplayNameFor(model => model.Command.Description)
								<span class="text-danger">*</span>
							</label>
							<input asp-for="Command.Description" class="form-control" />
							<span asp-validation-for="Command.Description" class="text-danger"></span>
						</div>

						<div class="d-flex justify-content-between mt-4">
							<a asp-page="./Index" class="btn btn-outline-secondary">
								<i class="fas fa-arrow-left me-1"> </i>Назад к списку
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-save me-1"> </i>Сохранить изменения
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>